<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/recardDCUS"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_rvdcUS"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/banhdap"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_rvdcUS"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_rvdcUS"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location_rvdcUS"
            android:drawableStart="@drawable/in_map"
            android:text="Location"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_rvdcUS"
            android:layout_below="@id/title_rvdcUS"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sdt_rvdcUS"
            android:drawableStart="@drawable/ic_phone"
            android:text="Phone"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_rvdcUS"
            android:layout_below="@id/location_rvdcUS"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>